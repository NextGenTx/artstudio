// src/pages/admin_products.astro
---

<head>
    <meta charset="utf-8">
    <title>Nosotros</title>
  </head>
  
  <div class="main-container">
    <div class="logo">
      <h3><span>Art</span>Studio</h3>
    </div>
    <div class="menu">
      <ul>
        <li><a href="#">administrar productos</a></li>
        <li><a href="admin_add_products">añadir productos</a></li>
        <li><a href="/">cerrar sesión</a></li>
      </ul>
    </div>
  </div>


<div class="admin-container">
  <h1>Listado de Productos</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Cantidad</th>
        <th>Ventas</th>
        <th>Categoría</th>
      </tr>
    </thead>
    <tbody id="product-list">
      <!-- Aquí se insertarán los productos dinámicamente -->
    </tbody>
  </table>
</div>

<script>
  // Ejemplo de datos de productos
  const products = [
    {
      name: "Bella Duna",
      price: 10000,
      quantity: 10,
      sales: 0,
      category: "Arte",
    },
    {
      name: "Lienzo Grande",
      price: 120,
      quantity: 10,
      sales: 0,
      category: "Lienzo",
    },
    {
      name: "Pintura Verde",
      price: 100,
      quantity: 10,
      sales: 0,
      category: "Pintura",
    },
  ];

  // Función para cargar los productos en la tabla
  function loadProducts() {
    const productList = document.getElementById("product-list");

    products.forEach((product) => {
      const row = document.createElement("tr");

      Object.values(product).forEach((value) => {
        const cell = document.createElement("td");
        cell.textContent = value;
        row.appendChild(cell);
      });

      productList.appendChild(row);
    });
  }

  // Cargar los productos cuando se carga la página
  document.addEventListener("DOMContentLoaded", loadProducts);

  // Inicio de sesión de administrador
  if (localStorage.getItem('isAdmin') !== 'true') {
    alert('Acceso denegado. Redirigiendo a productos.');
    window.location.href = '/';
  }
</script>

<style>
    .main-container {
        display: flex;
        position: relative;
        justify-content: space-between;
        align-items: center;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 80px;
    }

    .logo span {
        color: #ffb24e;
    }

    .logo h3 {
        font-family: "Montserrat", sans-serif;
        font-size: 30px;
        margin: 0px;
        margin-left: 40px;
    }

    .menu {
        font-size: 18px;
        margin-right: 40px;
    }
    .menu ul {
        list-style: none;
    }
    .menu li {
        display: inline;
    }
    .menu a {
        font-family: "Quicksand", sans-serif;
        text-decoration: none;
        font-weight: 500;
        color: #000;
        padding: 0px 10px;
    }
    .menu a:hover {
        color: #ffb24e;
        transition: 0.8s;
    }

  .admin-container {
    width: 80%;
    margin: 0 auto;
    padding: 20px;
    font-family: Arial, sans-serif;
  }

  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 20px;
  }

  th, td {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: left;
  }

  th {
    background-color: #f4f4f4;
  }

  tbody tr:nth-child(even) {
    background-color: #f9f9f9;
  }
  @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
        height: auto;
      }
    }
</style>