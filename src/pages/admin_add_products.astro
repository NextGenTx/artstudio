// src/pages/admin_add_product.astro
---
<head>
    <meta charset="utf-8">
    <title>Nosotros</title>
  </head>
  
  <div class="main-container">
    <div class="logo">
      <h3><span>Art</span>Studio</h3>
    </div>
    <div class="menu">
      <ul>
        <li><a href="admin_products">administrar prouctos</a></li>
        <li><a href="#">añadir productos</a></li>
        <li><a href="/">cerrar sesión</a></li>
      </ul>
    </div>
  </div>

<div class="admin-container">
    <h1>Añadir Producto</h1>
    <form id="add-product-form">
      <div class="form-group">
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category" required>
      </div>
      <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name" required>
      </div>
      <div class="form-group">
        <label for="quantity">Cantidad:</label>
        <input type="number" id="quantity" name="quantity" required>
      </div>
      <div class="form-group">
        <label for="price">Precio:</label>
        <input type="number" step="0.01" id="price" name="price" required>
      </div>
      <div class="form-group">
        <label for="image">Imagen:</label>
        <input type="file" id="image" name="image" accept="image/*" required>
      </div>
      <button type="submit">Añadir Producto</button>
    </form>
  </div>
  
  <script>

    if (localStorage.getItem('isAdmin') !== 'true') {
        alert('Acceso denegado. Redirigiendo a productos.');
        window.location.href = '/';
    }

    document.getElementById('add-product-form').addEventListener('submit', function(event) {
      event.preventDefault();
      
      // Obtener los datos del formulario
      const category = document.getElementById('category').value;
      const name = document.getElementById('name').value;
      const quantity = document.getElementById('quantity').value;
      const price = document.getElementById('price').value;
      const image = document.getElementById('image').files[0];
  
      // Crear un objeto FormData para manejar la imagen
      const formData = new FormData();
      formData.append('category', category);
      formData.append('name', name);
      formData.append('quantity', quantity);
      formData.append('price', price);
      formData.append('image', image);
  
      // Aquí iría la lógica para enviar los datos al servidor
      // Ejemplo:
      // fetch('/api/addProduct', {
      //   method: 'POST',
      //   body: formData
      // }).then(response => response.json())
      //   .then(data => {
      //     if (data.success) {
      //       alert('Producto añadido con éxito');
      //       window.location.href = '/productos';
      //     } else {
      //       alert('Error al añadir el producto');
      //     }
      //   });
  
      // Simulación de éxito
      setTimeout(() => {
        alert('Producto añadido con éxito');
        location.reload(); // Recargar la página
      }, 1000);
    });

  </script>
  
  <style>
    .main-container {
        display: flex;
        position: relative;
        justify-content: space-between;
        align-items: center;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 80px;
    }

    .logo span {
        color: #ffb24e;
    }

    .logo h3 {
        font-family: "Montserrat", sans-serif;
        font-size: 30px;
        margin: 0px;
        margin-left: 40px;
    }

    .menu {
        font-size: 18px;
        margin-right: 40px;
    }
    .menu ul {
        list-style: none;
    }
    .menu li {
        display: inline;
    }
    .menu a {
        font-family: "Quicksand", sans-serif;
        text-decoration: none;
        font-weight: 500;
        color: #000;
        padding: 0px 10px;
    }
    .menu a:hover {
        color: #ffb24e;
        transition: 0.8s;
    }

    .admin-container {
      width: 50%;
      margin: 0 auto;
      padding: 20px;
      font-family: Arial, sans-serif;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      background-color: #f9f9f9;
    }
  
    h1 {
      text-align: center;
      margin-bottom: 20px;
    }
  
    .form-group {
      margin-bottom: 15px;
    }
  
    .form-group label {
      display: block;
      margin-bottom: 5px;
    }
  
    .form-group input {
      width: 100%;
      padding: 8px;
      box-sizing: border-box;
    }
  
    button {
      width: 100%;
      padding: 10px;
      background-color: #ffb24e;
      border: none;
      color: #fff;
      font-size: 16px;
      cursor: pointer;
      border-radius: 4px;
    }
  
    button:hover {
      background-color: #ffa500;
    }

    @media (max-width: 768px) {
      .main-container {
        flex-direction: column;
        height: auto;
      }
    }
  </style>