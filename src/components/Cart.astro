---
import CartProduct from "./CartProduct.astro";
---

<div class="main-container-cart">
  <div class="cart">
    <div class="content">
      <div class="title">
        <h3>Carrito de compras</h3>
      </div>
      <div class="products-container">
        <CartProduct />
      </div>
    </div>
  </div>
</div>

<style>
  .main-container-cart {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 30%;
    height: calc(100vh - 80px);
  }
  .cart {
    height: 95%;
    width: 95%;
    border: 2px solid #d2d2d2;
    border-radius: 16px;
    box-shadow: 0px 3px 6px #00000029;
    background: #fcfcfc;
  }
  .content {
    margin: 15px;
  }
  .title h3 {
    font-family: "Montserrat", sans-serif;
    font-size: 20px;
    font-weight: 600;
  }
  .products-container {
    width: 100%;
    height: 100%;
  }
</style>
